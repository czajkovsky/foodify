= simple_form_for(@spot) do |f|
  .row
    .col-xs-12= f.error_notification
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.input :balance
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.input :client
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.input :status
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.input :waiter
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.input :name
  .row
    .col-xs-12.col-sm-6.col-md-5.col-lg-4
      = f.button :submit, class: 'btn btn-default'
