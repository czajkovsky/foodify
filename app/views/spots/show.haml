.container
  .row
    - if notice.present?
      .col-xs-12.alert.alert-info#notice= notice
  .row
    .col-xs-12
      %h2
        = @spot.name
        %span.label.label-primary= @spot.status
  .row
    .col-xs-12.col-sm-8.col-md-6.col-lg-6
      %ul.list-group
        %li.list-group-item
          %strong Client:
          = @spot.client
        %li.list-group-item
          %strong Waiter:
          = @spot.waiter
        %li.list-group-item
          %strong Balance:
          = @spot.balance
      = link_to 'Edit', edit_spot_path(@spot), class: 'btn btn-default'
