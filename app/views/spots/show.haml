.container
  .row
    .col-xs-12
      %h2
        = spot.name
        %span{ class: spot.decorate.state_class }= spot.state
  .row
    .col-xs-12.col-sm-8.col-md-6.col-lg-6
      %ul.list-group
        %li.list-group-item
          %strong Client:
          = spot.decorate.current_client
        %li.list-group-item
          %strong Waiter:
          = spot.decorate.current_waiter
        - if spot.decorate.has_client?
          %li.list-group-item
            %strong Balance:
            = number_to_currency(spot.balance)
      = link_to 'Back to spots', spots_path, class: 'btn btn-default with-margin'
      = link_to 'Edit', edit_spot_path(spot), class: 'btn btn-default'
