.container
  = simple_form_for(resource,  as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'new_user_session', class: 'form-session' }) do |f|
    %h2.form-signin-heading Please sign in
    = f.error_notification
    = f.input :email, required: true, autofocus: true
    = f.button :submit, 'Reset password', class: 'btn btn-lg btn-primary btn-block'
    = render 'devise/shared/links'
