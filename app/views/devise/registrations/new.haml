.container
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { id: 'new_user_session', class: 'form-session' }) do |f|
    %h2.form-signin-heading Sign up
    = f.error_notification
    = f.input :email, required: true, autofocus: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true
    = f.button :submit, "Sign up", class: 'btn btn-lg btn-primary btn-block'
    = render 'devise/shared/links'

